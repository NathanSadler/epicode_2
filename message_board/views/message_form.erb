<form action="<%= @options[:action] %>" method="<%= @options[:method] %>">
  <% if !@options[:secret_method].nil? %>
    <input name="_method" type="hidden" value="<%= @options[:secret_method] %>">
  <% end %>
  <label for="message_title">Message Title</label>
  <input name="message_title" id="message_title" type="text" default="<%= @options[:default_title] %>">
  <br>
  <label for="message_content">Message Content</label>
  <textarea id="message_content" name="message_content" rows="4" cols="50">
    <%= @options[:default_content] %>
  </textarea>
  <br>
  <button type="submit">Submit</button>
</form>

<!-- Add option for deleting if form is being used for editing -->
<% if @options[:secret_method] == "patch" %>
  <form action="/board/<%= @options[:board_id] %>/messages/<%= @options[:message_id] %>/edit" method="post">
    <input name="_method" type="hidden" value="delete">
    <button type="submit">Delete Message</button>
  </form>
<% end %>
