<h1>Edit Artist</h1>
<form action="/artist/<%= @artist.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="artist_name">Artist Name</label>
  <input id="artist_name" name="artist_name" value="<%= @artist.name %>">
  <label for="stage_id">Stage</label>
  <select name="stage_id" id="stage_id">
    <% if @stage_list.length == 0 %>
      <option value="-1">No Stage</option>
    <% else %>
      <% @stage_list.each do |stage| %>
        <% if stage.id == @artist.id %>
          <option value="<%= stage.id %>" selected><%= stage.name %></option>
        <% else %>
          <option value="<%= stage.id %>"><%= stage.name %></option>
        <% end %>
      <% end %>
    <% end %>
  </select>
  <button type="submit">Submit</button>
</form>
<form action="/artist/<%= @artist.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Artist</button>
</form>
